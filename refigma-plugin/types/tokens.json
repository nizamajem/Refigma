      }
    }
  },
  "spacing": {
    "base": {
      "scale": [4, 8, 12, 16, 24, 32, 40, 48],
      "alias": {
        "xxs": 4,
        "xs": 8,
        "sm": 12,
        "md": 16,
        "lg": 24,
        "xl": 32,
        "xxl": 40,
        "3xl": 48
      }
    },
    "density": {
      "compact": {
        "padding": 12,
        "gap": 8
      },
      "cozy": {
        "padding": 16,
        "gap": 12
      },
      "spacious": {
        "padding": 24,
        "gap": 16
      }
    }
  },
  "typography": {
    "fontFamily": "Inter",
    "scale": {
      "h1": { "fontSize": 40, "lineHeight": 48, "fontWeight": 700 },
      "h2": { "fontSize": 32, "lineHeight": 40, "fontWeight": 700 },
      "h3": { "fontSize": 28, "lineHeight": 36, "fontWeight": 600 },
      "h4": { "fontSize": 24, "lineHeight": 32, "fontWeight": 600 },
      "h5": { "fontSize": 20, "lineHeight": 28, "fontWeight": 600 },
      "h6": { "fontSize": 18, "lineHeight": 26, "fontWeight": 600 },
      "body": { "fontSize": 16, "lineHeight": 24, "fontWeight": 400 },
      "bodyBold": { "fontSize": 16, "lineHeight": 24, "fontWeight": 600 },
      "caption": { "fontSize": 12, "lineHeight": 16, "fontWeight": 400 },
      "captionBold": { "fontSize": 12, "lineHeight": 16, "fontWeight": 600 }
    }
  },
  "radii": {
    "none": 0,
    "sm": 6,
    "md": 12,
    "lg": 16,
    "pill": 999
  },
  "shadows": {
    "soft": {
      "x": 0,
      "y": 8,
      "blur": 20,
      "spread": 0,
      "color": "rgba(15, 41, 89, 0.12)"
    },
    "medium": {
      "x": 0,
      "y": 16,
      "blur": 32,
      "spread": 0,
      "color": "rgba(15, 41, 89, 0.16)"
    },
    "strong": {
      "x": 0,
      "y": 24,
      "blur": 48,
      "spread": 0,
      "color": "rgba(10, 28, 64, 0.2)"
    }
  }
}
